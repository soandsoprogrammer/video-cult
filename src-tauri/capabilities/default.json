{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "core:window:allow-start-dragging",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/ffmpeg",
          "cmd": "",
          "sidecar": true,
          "args": [
            "-i",
            {
              "validator": "\\S+"
            },
            "-vf",
            "scale=1280:720",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    }
  ]
}